{{! User creation and admin}}
<div class="container">
<div class="row">
    <div class="col">a</div>
    <div class="col">
    <form action="" style="padding: 50px" method="post" autocomplete="username">
    <h2>Register new user</h2>
    {{#if cwrong}}
    <div class="alert alert-danger" role="alert">
    Wrong username or password
    </div>
    {{/if}}
    <div class="form-group">
        <label for="uname_input">Username</label>
        <input type="text" class="form-control" id="uname_input" name="uname" placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label for="upwd_input">Password</label>
        <input type="password" class="form-control" id="upwd_input" name="pwd" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    </form>
    </div>
    
</div>
</div>

